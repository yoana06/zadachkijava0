				if (veren.isSelected())br++;
				if (veren2.isSelected())br++;
				if (liberalna.isSelected())br++;
				if (dobrudja.isSelected())br++;
				if (borba.isSelected())br++;
				if (br<2) ocenka.setText("2");
				else ocenka.setText(Integer.toString(br));
			}
		});
