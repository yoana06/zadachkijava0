import java.util.Scanner;

public class trapec {

	
	public static void trapec(double a, double b, double h) {
		double s;
				s=(a+b)*(h/2);
					
			System.out.println("s= "+s);		
					}

public static double trapec2(double a2, double b2,double h2) {
	
	double s;
	s=(a2+b2)*(h2/2);
return s;

}
public static void main(String[] args) {
	Scanner inp=new Scanner(System.in);
	double a=inp.nextDouble();
	double b=inp.nextDouble();
	double h=inp.nextDouble();
	double a2=inp.nextDouble();
	double b2=inp.nextDouble();
	double h2=inp.nextDouble();
trapec(a,b,h);
System.out.println("liceto= "+trapec2(a2,b2,h2));
	}

}
